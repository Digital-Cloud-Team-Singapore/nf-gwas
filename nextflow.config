// default: resume
resume = true
process.container= 'quay.io/genepi/gwas-regenie:v0.1.0'

manifest {
name            = 'gwas-regenie'
description = 'Nextflow GWAS pipeline to execute Regenie, create Manhattan plots and annotate results'
author          = 'Lukas Forer, Sebastian SchÃ¶nherr'
homePage = 'https://github.com/genepi/gwas-regenie'
homePage        = 'https://github.com/lukfor/gwas-regenie'
description     = 'Nextflow GWAS Pipeline.'
mainScript = 'gwas-regenie.nf'
nextflowVersion = '!>=21.04.0'
version = '0.1.0'
}

profiles {
    debug { process.beforeScript = 'echo $HOSTNAME' }

    standard {
        docker.enabled         = true
        docker.userEmulation   = true
        singularity.enabled    = false
    }
    singularity {
        singularity.enabled    = true
        singularity.autoMounts = true
        docker.enabled         = false
    }

}
